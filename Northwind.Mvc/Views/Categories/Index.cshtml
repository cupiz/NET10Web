@model IEnumerable<Northwind.Mvc.Services.CategoryWithProductCount>

@{
    ViewData["Title"] = "Categories";
}

<h1 class="h2 mb-4">
    <i class="bi bi-folder2-open me-2"></i>Product Categories
</h1>

<div class="row g-4">
    @foreach (var category in Model)
    {
        <div class="col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-3">
                        <i class="bi bi-tag"></i>
                    </div>
                    <h5 class="card-title">@category.CategoryName</h5>
                    <p class="card-text text-muted small">
                        @(category.Description?.Length > 100 
                            ? category.Description[..100] + "..." 
                            : category.Description)
                    </p>
                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <span class="badge bg-primary" title="Active Products">
                            <i class="bi bi-check-circle me-1"></i>@category.ActiveProductCount Active
                        </span>
                        <span class="badge bg-secondary" title="Total Products">
                            <i class="bi bi-box me-1"></i>@category.ProductCount Total
                        </span>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center">
                    <a asp-controller="Products" asp-action="ByCategory" asp-route-id="@category.CategoryId"
                       class="btn btn-outline-primary w-100">
                        <i class="bi bi-eye me-1"></i>View Products
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .hover-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}
