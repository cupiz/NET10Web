@model Northwind.Mvc.ViewModels.ProductListViewModel

@{
    ViewData["Title"] = Model.CurrentCategory?.CategoryName ?? 
        (ViewData["IsReorderView"] as bool? == true ? "Reorder Alerts" : "Products");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2">
            @if (ViewData["IsReorderView"] as bool? == true)
            {
                <i class="bi bi-exclamation-triangle text-warning me-2"></i>
            }
            else
            {
                <i class="bi bi-box-seam me-2"></i>
            }
            @ViewData["Title"]
        </h1>
        @if (Model.CurrentCategory is not null)
        {
            <p class="text-muted mb-0">@Model.CurrentCategory.Description</p>
        }
    </div>
    <div>
        <form asp-action="Search" method="get" class="d-flex gap-2">
            <input type="search" name="q" class="form-control" placeholder="Search products..."
                   value="@Model.SearchTerm" style="width: 250px;">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SearchTerm))
{
    <div class="alert alert-info d-flex align-items-center">
        <i class="bi bi-search me-2"></i>
        Search results for: <strong class="ms-1">"@Model.SearchTerm"</strong>
        <a asp-action="Index" class="ms-auto btn btn-sm btn-outline-secondary">Clear Search</a>
    </div>
}

@if (!Model.Products.Any())
{
    <div class="alert alert-secondary text-center">
        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
        <h5>No products found</h5>
        <p class="mb-0">Try adjusting your search or filter criteria.</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm @(product.NeedsReorder ? "border-warning" : "")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@product.ProductName</h5>
                            @if (product.Discontinued)
                            {
                                <span class="badge bg-danger">Discontinued</span>
                            }
                            else if (product.NeedsReorder)
                            {
                                <span class="badge bg-warning text-dark">Low Stock</span>
                            }
                        </div>
                        
                        <p class="card-text small text-muted mb-2">
                            @product.QuantityPerUnit
                        </p>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="h5 text-primary mb-0">
                                @(product.UnitPrice?.ToString("C") ?? "N/A")
                            </span>
                            <span class="text-muted small">
                                <i class="bi bi-box me-1"></i>@(product.UnitsInStock ?? 0) in stock
                            </span>
                        </div>

                        @if (product.Category is not null)
                        {
                            <span class="badge bg-secondary">@product.Category.CategoryName</span>
                        }
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a asp-action="Details" asp-route-id="@product.ProductId"
                           class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination (if implemented) -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4" aria-label="Product pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                </li>
                <li class="page-item active">
                    <span class="page-link">Page @Model.CurrentPage of @Model.TotalPages</span>
                </li>
                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }
}
