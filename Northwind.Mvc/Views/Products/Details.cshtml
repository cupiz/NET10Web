@model Northwind.Mvc.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = Model.Product.ProductName;
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
        @if (Model.Product.Category is not null)
        {
            <li class="breadcrumb-item">
                <a asp-controller="Products" asp-action="ByCategory" 
                   asp-route-id="@Model.Product.CategoryId">@Model.Product.Category.CategoryName</a>
            </li>
        }
        <li class="breadcrumb-item active" aria-current="page">@Model.Product.ProductName</li>
    </ol>
</nav>

<div class="row">
    <!-- Product Details -->
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h1 class="h2 mb-0">@Model.Product.ProductName</h1>
                    @if (Model.Product.Discontinued)
                    {
                        <span class="badge bg-danger fs-6">Discontinued</span>
                    }
                    else if (Model.Product.NeedsReorder)
                    {
                        <span class="badge bg-warning text-dark fs-6">Low Stock Alert</span>
                    }
                    else if (Model.Product.IsInStock)
                    {
                        <span class="badge bg-success fs-6">In Stock</span>
                    }
                </div>

                <p class="lead text-muted">@Model.Product.QuantityPerUnit</p>

                <hr />

                <div class="row">
                    <div class="col-md-6">
                        <h3 class="display-4 text-primary mb-3">
                            @(Model.Product.UnitPrice?.ToString("C") ?? "Price N/A")
                        </h3>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th><i class="bi bi-box me-2"></i>Units in Stock</th>
                                <td class="text-end">@(Model.Product.UnitsInStock ?? 0)</td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-arrow-repeat me-2"></i>Units on Order</th>
                                <td class="text-end">@(Model.Product.UnitsOnOrder ?? 0)</td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-exclamation-circle me-2"></i>Reorder Level</th>
                                <td class="text-end">@(Model.Product.ReorderLevel ?? 0)</td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-cash-stack me-2"></i>Inventory Value</th>
                                <td class="text-end fw-bold">@Model.Product.InventoryValue.ToString("C")</td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (Model.Product.Category is not null)
                {
                    <hr />
                    <div class="d-flex align-items-center">
                        <strong class="me-2">Category:</strong>
                        <a asp-controller="Products" asp-action="ByCategory" 
                           asp-route-id="@Model.Product.CategoryId"
                           class="badge bg-primary text-decoration-none">
                            @Model.Product.Category.CategoryName
                        </a>
                    </div>
                }

                @if (Model.Product.Supplier is not null)
                {
                    <div class="mt-3 p-3 bg-light rounded">
                        <h6><i class="bi bi-truck me-2"></i>Supplier Information</h6>
                        <p class="mb-1"><strong>@Model.Product.Supplier.CompanyName</strong></p>
                        <p class="text-muted mb-0 small">
                            @if (!string.IsNullOrEmpty(Model.Product.Supplier.ContactName))
                            {
                                <span>@Model.Product.Supplier.ContactName</span>
                                @if (!string.IsNullOrEmpty(Model.Product.Supplier.ContactTitle))
                                {
                                    <span>(@Model.Product.Supplier.ContactTitle)</span>
                                }
                                <br />
                            }
                            @Model.Product.Supplier.FullAddress
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        @if (Model.RelatedProducts.Any())
        {
            <div class="card shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-grid me-2"></i>Related Products</h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var related in Model.RelatedProducts)
                    {
                        <a asp-action="Details" asp-route-id="@related.ProductId"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span>@related.ProductName</span>
                            <span class="text-primary">@(related.UnitPrice?.ToString("C"))</span>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Products
    </a>
</div>
